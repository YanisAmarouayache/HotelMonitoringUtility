{
  "name": "@hotel-monitoring/backend",
  "version": "1.0.0",
  "description": "GraphQL backend for hotel monitoring utility",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:setup": "npx prisma migrate dev --name init && npx prisma generate",
    "db:seed": "ts-node src/seed.ts",
    "db:studio": "npx prisma studio"
  },
  "dependencies": {
    "apollo-server": "^3.12.1",
    "graphql": "^16.8.1",
    "@prisma/client": "^5.7.0",
    "prisma": "^5.7.0",
    "zod": "^3.22.4",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/cors": "^2.8.17",
    "typescript": "^5.3.3",
    "ts-node-dev": "^2.0.0"
  }
} 